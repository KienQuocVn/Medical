<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medical</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 fixed-top navbar-custom">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="/images/logo_footer.png" alt="LTR Medical" class="navbar-logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item "><a class="nav-link text-primary-index fw-bold" asp-area=""
                                asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-primary-index fw-bold" asp-area=""
                                asp-page="/About">About</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-primary-index fw-bold" href="#"
                                id="productsDropdown" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">Products</a>
                            <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                                <li><a class="dropdown-item" href="#">Infusion</a></li>
                                <li><a class="dropdown-item" href="#">Regional Anaesthesia</a></li>
                                <li><a class="dropdown-item" href="#">Neuromuscular Blockade Monitoring</a></li>
                                <li><a class="dropdown-item" href="#">Specialty Care</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link text-primary-index fw-bold" asp-area=""
                                asp-page="/News">News</a></li>
                        <li class="nav-item"><a class="btn btn-warning text-white ms-2" asp-area=""
                                asp-page="/Contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="overflow-x-hidden">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="cta-section d-flex align-items-center justify-content-center">
            <div class="title text-center">
                <h2 class="fw-bold text-white">Call us Now</h2>
                <p class="fs-5 mb-4 text-warning">Call us for more information on our products on <span
                        class="fw-bold">1800 319 419</span>.</p>
                <a href="/Contact" class="btn btn-warning btn-lg px-4 text-white mb-4">CONTACT US TODAY!</a>
                <div class="d-flex justify-content-center gap-3">
                    <a href="#" class="btn text-white social-icon" title="Facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="btn text-white social-icon" title="X"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" class="btn text-white social-icon" title="Telegram"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="btn text-white social-icon" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>
        <div class="contact-section d-flex align-items-center justify-content-between">
            <div class="col-md-6 container">
                <div class="fw-bold ms-3 mb-4 text-warning contact-title">CONTACT</div>
                <div class="fw-bold text-white ms-3">Phone: 1800 319 419</div>
                <div class="fw-bold text-white ms-3">Email: info@medical.com</div>
            </div>
            <div class="col-md-6">
                <a class="btn btn-warning text-white fs-4 fw-bold contact-btn">Contact Us</a>
            </div>
        </div>
        <div class="copyright-section d-flex align-items-center">
            <small class="ms-4 text-white">© 2025 Medical</small>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>

</html>