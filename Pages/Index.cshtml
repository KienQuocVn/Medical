@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<!-- Hero Section -->
<section class="bg-white py-5 position-relative overflow-hidden hero-section">
    <div class="row align-items-center hero-content">
        <h1 class="display-5 fw-bold mb-3 text-warning-index mt-5">Building long-term relationships in healthcare</h1>
        <h3 class="lead text-secondary mb-4">Clinical excellence and patient safety are our priorities</h3>
        <a href="#" class="btn btn-warning-index px-4 discover-btn">DISCOVER MORE</a>
    </div>
</section>
<!-- Intro Section -->
<section class="text-white py-4 intro-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 intro-text">
                <p class="fw-bold fs-5 mb-2">
                    LTR Medical is an Australian medical device distribution company committed to clinical excellence in
                    the products we supply and the customer service we deliver.
                </p>
                <p class="mb-0">
                    Our vision is to simplify treatment for health-care providers. We source and supply safe and
                    effective medical and surgical devices for hospitals, medical practices and home carers.
                </p>
                <p class="mb-0">
                    LTR Medical products are selected based on an exceptionally high standard of clinical efficiency and
                    excellence in safety, design and delivery. Our product range is sourced from trusted, high quality
                    medical device developers and manufacturers committed to clinical excellence and patient safety,
                    distributed by LTR Medical throughout Australia and New Zealand.
                </p>
            </div>
            <div class="col-lg-6">
                <img src="/images/banner.jpg" class="img-fluid rounded-3" alt="">
            </div>
        </div>
    </div>
</section>
<!-- Products Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-5 text-primary-index products-title">Our Products</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-white rounded-3 infusion-card">
                        <h5 class="fw-bold mb-3 text-warning-index pt-4 pb-3">Infusion</h5>
                        <div class="row g-2">
                            <div class="col-6 p-2">
                                <button
                                    class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Accufuser</button>
                            </div>
                            <div class="col-6 p-2">
                                <button
                                    class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Springfusor</button>
                            </div>
                            <div class="col-6 p-2">
                                <button
                                    class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Accumate</button>
                            </div>
                            <div class="col-6 p-2">
                                <button class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">V-Set</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-white rounded-3 anaesthesia-card">
                        <h5 class="fw-bold mb-3 text-warning-index pt-4 pb-3">Regional Anaesthesia</h5>
                        <div class="row g-2 pb-3">
                            <div class="col-6 p-2">
                                <button
                                    class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Accufuser</button>
                            </div>
                            <div class="col-6 p-2">
                                <button
                                    class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Springfusor</button>
                            </div>
                            <div class="col-6 p-2">
                                <button
                                    class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Accumate</button>
                            </div>
                            <div class="col-6 p-2">
                                <button class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">V-Set</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-white rounded-3 neuromuscular-card">
                        <h5 class="fw-bold mb-3 text-warning-index pt-4 pb-3">Neuromuscular Blockade Monitoring</h5>
                        <div class="d-grid gap-2">
                            <button class="btn btn-warning-index btn-sm fw-bold text-white p-3">TwitchView™</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-white rounded-3 infusion-card">
                        <h5 class="fw-bold mb-3 text-warning-index pt-4 pb-3">Specialist Anaesthesia</h5>
                        <div class="row g-2">
                            <div class="col-6 p-2">
                                <button class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">V-Set</button>
                            </div>
                            <div class="col-6 p-2">
                                <button class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Nasal
                                    Spray</button>
                            </div>
                            <div class="col-12 p-2">
                                <button
                                    class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Accufuser</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-white rounded-3 anaesthesia-card">
                        <h5 class="fw-bold mb-3 text-warning-index pt-4 pb-3">Specialty Care</h5>
                        <div class="row g-2 pb-3">
                            <div class="col-6 p-2">
                                <button
                                    class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Amnicot</button>
                            </div>
                            <div class="col-6 p-2">
                                <button class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">O'Neil
                                    Catheter</button>
                            </div>
                            <div class="col-12 p-2">
                                <button class="btn btn-warning-index btn-sm w-100 fw-bold text-white p-3">Furine
                                    External Faecal Catheter</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
